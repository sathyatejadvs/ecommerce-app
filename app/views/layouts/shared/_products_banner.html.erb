 <section class= "mt-2">
  <div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <%= image_tag product_image(@product.main_image_url, 'main') %>
          <div class="container">
            <div class="carousel-caption d-none d-md-block text-left ">
              <div style="color: white;">
                <h3 >Top Rated Books</h3>
                <p>“Never trust anyone who has not brought a book with them.” – Lemony Snicket</p>
                <p><a class="btn btn-sm btn-primary" href="#" role="button">Sign up today</a></p>
              </div>
            </div>
          </div>
        </div>

        <div class="carousel-item">
          <%= image_tag product_image(@product.thumb_image_url, 'thumb') %>
          <div class="container">
            <div class="carousel-caption d-none d-md-block ">
              <div class= "slide1-font" >
                <h1>Top Rated Books</h1>
                <p>“Think before you speak. Read before you think.” – Fran Lebowitz</p>
                <p><a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a></p>
              </div>
            </div>
          </div>
        </div>

    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
</section>
	