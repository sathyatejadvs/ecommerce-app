    <div class="col-md-3 col-lg-3 col-xs-6">
    	<div class='singleCard'>
      		<a href= "/products/<%=product.id%>">

      		<div class="singleImg">
      		<%= image_tag product_image(product.main_image_url, 'main') %>
      		</div>

      		</a>
			<p class= "card-text">
				<span ><%= link_to product.title, product_path(product) %></span>
				<p>Price: $<%= link_to product.price, product_path(product), style: "color:black" %></p>
			</p>
		</div>
    </div>
