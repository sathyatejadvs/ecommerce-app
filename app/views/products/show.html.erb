<div class= "row mt-2">

	<div class= "col-12 col-sm-7 col-md-7">
		<%= render "layouts/shared/products_banner" %>
		<div class= "row">
			<button class="btn btn-warning ml-1 ">
				ADD TO CART
			</button>
			<button class="btn btn-info ml-auto" type="button">
				BUY NOW
			</button>
		</div>
	</div>

	<div class= "col-12 col-sm-4 col-md-4">
		<h3>Title: </h3>
		<p><%= @product.title %></p>
		<hr>
		<h3>Description: </h3>
		<hr>
		<p><%= @product.description %></p>
		<h3>Price: </h3>
		<hr>
		<p>$<%= @product.price %></p>

		<%= link_to 'Back', products_path %>
	</div>
</div>


